#!/bin/bash

vm_matches=$( VBoxManage list vms | grep vagrant-docker-hostvm | wc -l ) 
if [[ vm_matches -eq '1' ]]; then
    echo "Shutting down 'vagrant-docker-hostvm'..."
    VBoxManage controlvm vagrant-docker-hostvm poweroff
else
    echo "Did not find exactly one vm named 'vagrant-docker-hostvm'... aborting."
    exit 1
fi
